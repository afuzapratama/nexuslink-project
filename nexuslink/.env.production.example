# ========================================
# NexusLink Production Environment Template
# ========================================
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to git!

# ========================================
# AWS DynamoDB Configuration (REQUIRED)
# ========================================
# For AWS DynamoDB in production, leave NEXUS_DYNAMO_ENDPOINT empty
# Credentials akan diambil dari IAM role atau AWS credentials file
NEXUS_DYNAMO_ENDPOINT=
NEXUS_AWS_REGION=ap-southeast-1

# AWS Credentials (if not using IAM role)
# Recommended: Use IAM role on EC2/ECS instead
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# ========================================
# API Configuration (REQUIRED)
# ========================================
NEXUS_API_PORT=8080
NEXUS_API_KEY=CHANGE-THIS-TO-STRONG-RANDOM-KEY-min-32-chars

# ========================================
# Redis Configuration (REQUIRED)
# ========================================
NEXUS_REDIS_ADDR=localhost:6379
NEXUS_REDIS_PASSWORD=CHANGE-THIS-TO-STRONG-PASSWORD
NEXUS_REDIS_PORT=6379

# ========================================
# Agent Configuration (Optional - for co-located agent)
# ========================================
NEXUS_AGENT_PORT=9090
NEXUS_NODE_TOKEN=get-from-dashboard-nodes-page
NEXUS_NODE_NAME=Production Agent
NEXUS_NODE_REGION=ID-JKT
NEXUS_NODE_PUBLIC_URL=https://short.yourdomain.com
NEXUS_NODE_DOMAIN=short.yourdomain.com

# ========================================
# Optional: GeoIP Database
# ========================================
# Download MaxMind GeoLite2 City database
# https://dev.maxmind.com/geoip/geolite2-free-geolocation-data
NEXUS_MAXMIND_DB_PATH=/path/to/GeoLite2-City.mmdb

# ========================================
# System Configuration
# ========================================
TZ=Asia/Jakarta

# ========================================
# Dashboard Environment
# ========================================
# For nexuslink-dashboard/.env.production
NEXT_PUBLIC_APP_NAME=NexusLink Dashboard
NEXUS_API_BASE=https://api.yourdomain.com
# NEXUS_API_KEY must match the value above
