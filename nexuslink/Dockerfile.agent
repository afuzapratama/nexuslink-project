# Multi-stage build untuk NexusLink Agent
# Stage 1: Build
FROM golang:1.23-alpine AS builder

# Install dependencies untuk build
RUN apk add --no-cache git ca-certificates tzdata

WORKDIR /build

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build binary dengan optimizations
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build \
    -ldflags='-w -s -extldflags "-static"' \
    -o nexus-agent \
    ./cmd/agent/main.go

# Stage 2: Runtime
FROM alpine:3.19

# Install ca-certificates untuk HTTPS calls
RUN apk --no-cache add ca-certificates tzdata

# Create non-root user
RUN addgroup -g 1000 nexus && \
    adduser -D -u 1000 -G nexus nexus

WORKDIR /app

# Copy binary from builder
COPY --from=builder /build/nexus-agent .

# Copy timezone data
COPY --from=builder /usr/share/zoneinfo /usr/share/zoneinfo

# Set ownership
RUN chown -R nexus:nexus /app

# Switch to non-root user
USER nexus

# Expose port
EXPOSE 9090

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:9090/health || exit 1

# Run
CMD ["./nexus-agent"]
